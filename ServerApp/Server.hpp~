#ifndef __SERVER
#define __SERVER

#include <vector>
#include "Client.hpp"

class Server
{
public :
  Server(int);
  ~Server();
  int getCurrentConnections()const;
  bool acceptConnections();
private :
  std::vector<Client*> clients;
  int socketfd;
  int clientIDS;
  int numberOfClients;  
  int port;
  struct sockaddr_in self;

  void writeError(const std::string&, const std::string&);
};

#endif
